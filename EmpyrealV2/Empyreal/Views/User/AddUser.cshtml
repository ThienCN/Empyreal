@model Empyreal.ViewModels.Manager.UserUpdateViewModel
@{
    ViewData["Title"] = "Thêm người dùng";
}



<!-- BREADCRUMB -->
<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Trang chủ</a></li>
            <li class="active">Thêm mới người dùng</li>
        </ul>
    </div>
</div>
<!-- /BREADCRUMB -->
<div class="section-grey">
    <div class="container">
        <div class="row account">
            @await Html.PartialAsync("Manager\\_MenuLeftAdminPartial")
            <div class="col-lg-8 col-xs-12 content-right" id="content-right">
                @if (Model.IsSuccess)
                {
                    <div class="alert alert-success">Thêm mới người dùng thành công</div>
                }
                else if (!Model.IsSuccess && !String.IsNullOrEmpty(Model.Email))
                {
                    <div class="alert alert-error">Thêm mới người dùng thất bại</div>
                }
                <h4>Thêm mới người dùng</h4>
                <div class="account-profile">
                    <form class="profile-form" method="post" asp-controller="User" asp-action="AddUser" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <div class="form-group">
                            <label class="control-label" asp-for="HoTen">Họ tên</label>
                            <div class="input-wrap">
                                <input class="form-control" asp-for="HoTen" placeholder="Nhập họ tên" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="PhoneNumber">Số điện thoại</label>
                            <div class="input-wrap">
                                <input class="form-control" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Email">Email</label>
                            <div class="input-wrap">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Phân quyền</label>
                            <div class="input-wrap">
                                <div class="user-role">
                                    <select class="form-control" asp-for="UserRole" asp-items="Model.UserRoles"></select>
                                    <span asp-validation-for="UserRole" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Giới tính</label>
                            <div class="input-wrap">
                                <div class="row">
                                    @foreach (var item in Model.SexList)
                                    {
                                        <label class="col-xs-3 radio-wrap">
                                            @item.Text
                                            <input type="radio" asp-for="Sex" value="@item.Value" />
                                            <span class="checkmark"></span>
                                        </label>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ngày sinh</label>
                            <div class="input-wrap">
                                <div class="birthday-picker">
                                    <select class="form-control" asp-for="DateOfBirth" asp-items="Model.Dates"></select>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    <select class="form-control" asp-for="MonthOfBirth" asp-items="Model.Months"></select>
                                    <span asp-validation-for="MonthOfBirth" class="text-danger"></span>
                                    <select class="form-control" asp-for="YearOfBirth" asp-items="Model.Years"></select>
                                    <span asp-validation-for="YearOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="password-group" id="password-change" style="display: block">
                            <input type="hidden" asp-for="isChangePass" />
                            <div class="form-group">
                                <label class="control-label" asp-for="Password">Mật khẩu</label>
                                <div class="input-wrap">
                                    <input class="form-control" asp-for="Password" placeholder="Mật khẩu từ 6 đến 32 ký tự" data-val="false" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                                <div class="input-wrap">
                                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu mới" data-val="false" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"></label>
                            <button class="primary-btn" type="submit">Thêm người dùng</button>
                        </div>
                    </form>

                    @*<button class="btn btn-info" id="show-toast">Toast</button>
                        <div class="toast mt-3">
                            <div class="toast-header">
                                Toast Header
                            </div>
                            <div class="toast-body">
                                Some text inside the toast body
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</div>