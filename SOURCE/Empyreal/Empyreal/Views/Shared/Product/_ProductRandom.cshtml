@using Empyreal.ViewModels.Display;

@model IEnumerable<ProductBasicViewModel>

<!-- section title -->
<div class="col-md-12">
    <div class="section-title">
        <h3 class="title">Dành riêng cho bạn</h3>
    </div>
</div>
@{
    var itemCount = 0;
}
<!-- section title -->
@foreach (var product in Model)
{
    if (itemCount == 0)
    {
        @:<div class="row">
        }

        <!-- Product Single -->
        <div class="col-md-3 col-sm-6 col-xs-6">
            <div class="product product-single" title="@product.Name">
                <div class="product-thumb">
                    <a asp-controller="Home" asp-action="Product" asp-route-productID="@product.Id" class="main-btn quick-view"><i class="fa fa-search-plus"></i> Xem chi tiết</a>
                    <img src="@product.Images[0].Url" alt="">
                </div>
                <div class="product-body">
                    <h2 class="product-name"><a asp-controller="Home" asp-action="Product" asp-route-productID="@product.Id">@product.Name</a></h2>
                    <div class="product-rating">
                        <p class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </p>
                        <p class="review">(36 nhận xét)</p>
                    </div>
                    <h4 class="product-price">@product.PriceProductText<del class="product-old-price"> @product.OldPriceProductText</del></h4>
                    @*<div class="product-btns">
                            <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                            <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                            <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</button>
                        </div>*@
                </div>
            </div>
        </div>
        <!-- /Product Single -->

        if (itemCount == 3)
        {
            itemCount = 0;
        @:</div>
    }
    else
    {
        itemCount++;
    }
}